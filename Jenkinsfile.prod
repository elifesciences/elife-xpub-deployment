elifePipeline {
    def commit
    stage 'Checkout', {
        checkout scm
        commit = elifeGitRevision()
    }

    stage 'Deploy on prod', {
        elifeGitMoveToBranch commit, 'master'
        builderDeployRevision 'elife-xpub--prod', commit
        builderSmokeTests 'elife-xpub--prod', '/srv/elife-xpub'
    }
}
